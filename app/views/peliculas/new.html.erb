<div class="container">
<h2>Añade aqui una nueva pelicula</h2>

<%= form_for @pelicula do |pelicula| %>

<p>
	<%= pelicula.label :name %> <br/>
	<%= pelicula.text_field :name %>
</p>

<p>
	<%= pelicula.label :stars %> <br/>
	<%= pelicula.text_field :stars %>
</p>

<p>
	<%= pelicula.label :main_actor %> <br/>
	<%= pelicula.text_field :main_actor %>
</p>

<p>
	<%= pelicula.label :year %> <br/>
	<%= pelicula.text_field :year %>
</p>

<p>
	<%= pelicula.label :director %> <br/>
	<%= pelicula.text_field :director %>
</p>

<p>
	<%= pelicula.label :url %> <br/>
	<%= pelicula.text_field :url %>
</p>

	<%= pelicula.submit "Añadir peli"%>

<% end %>

<p> <%= link_to "Añadir nueva peli", new_pelicula_path  %> </p>
</div>